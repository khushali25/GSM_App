<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"

    android:weightSum="3">

    <LinearLayout
        android:layout_weight="0.2"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gradient"
        android:orientation="vertical">
        <Button
            android:id="@+id/adminloginbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_person_black_24dp"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Gujarati Samaj of Montreal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="2.8"
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#E0E0E0">


        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#fff"
                android:layout_weight="0.4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#fff"
                android:layout_weight="1" />


        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_weight="2.9"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:elevation="35dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                android:layout_weight="0.3"
                    android:orientation="vertical">


            <TextView
            android:id="@+id/eventname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
                android:layout_weight="0.3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#445469"
            android:textSize="15dp"
                android:textAllCaps="false"
            android:textStyle="normal"
            android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.3"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnermainactivity"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/member"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/tick"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/nonmember"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cross"
                    android:gravity="center"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/duplicatemember"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/cross"
                    android:gravity="center"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">
           <TextView
               android:text="Status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/status"
               android:gravity="left"
               android:layout_weight="1"
               android:visibility="visible"
               android:inputType="text" />

            <TextView
            android:id="@+id/duplicatemessage"
            android:text="Ticket Found"
            android:textSize="17dp"
                android:gravity="right"
                android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>
             <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">
                <TextView
                    android:text="Date"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"

                    android:visibility="visible"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/datetxt"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="Date Found"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Verify By"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/verifyby"
                            android:visibility="visible"
                            android:inputType="text" />

                        <TextView
                            android:id="@+id/verifybytxt"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:text="verify by Found"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:visibility="visible"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                <TextView
                    android:text="Time"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:visibility="visible"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/timetxt"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="Time Found"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:visibility="visible"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Booking ID"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bookingId"
                        android:visibility="visible"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/bookingidtxt"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Booking Id Found"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time"
                        android:visibility="visible"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Name"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:visibility="visible"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/usernametxt"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Name Found"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time"
                        android:visibility="visible"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Barcode ID"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/barcode"
                        android:visibility="visible"
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/barcodetxt"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:text="Barcode Found"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>


            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"

                    android:orientation="vertical">

                    <Button
                        android:id="@+id/read_barcode"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:layout_gravity="bottom"
                        android:elevation="5dp"
                        android:translationZ="5dp"
                        android:stateListAnimator="@null"
                        android:background="#336A86"
                        android:text="Scan"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#ffffff" />

                <Button
                    android:id="@+id/read_barcode_manual"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:layout_gravity="bottom"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:stateListAnimator="@null"
                    android:background="#336A86"
                    android:text="Manual Scan"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffff" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"

                    android:orientation="vertical">
                </LinearLayout>
                </LinearLayout>
            </android.support.design.card.MaterialCardView>

            <!--<View-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--/>-->
